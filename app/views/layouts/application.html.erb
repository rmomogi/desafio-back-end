<!DOCTYPE html>
<html>
  <head>
    <title>Desafio Back-End</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
      <a class='navbar-brand text-white font-weight-bold' href='#'>CNAB</a>
      <div id='navbarNavDropdown' class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item ml-5">
            <%= link_to 'Upload', new_cnab_path, {:class => 'nav-link text-white', :remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-upload'} %>
          </li>
        </ul>
      </div>
    </nav>
    <div class='container-fluid'>
      <%= yield %>
      <div id="modal-window" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
    </div>
  </body>
</html>
